---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Error 404`;
const metadata = {
  title,
  robots: {
    index: false,
    follow: true,
  },
};
---

<Layout metadata={metadata}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-primary">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Esta página no existe.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">Aquí puedes volver a nuestra página de inicio.</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Volver a inicio</a>
      </div>
    </div>
  </section>
</Layout>
